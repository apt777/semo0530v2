<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#ffffff"/>
    <!-- 배경색을 의미, 이미지의 중간 중간이 투명한 색상이면 여기서 지정한 색이 보이게 됨-->
    <!-- 동일하게 투명하게는 @null을 입력하면 된다. -->

    <stroke android:width="5dp" android:color="#000000"/>
    <!--stroke 선으로 테두리를 그림. 여기서 색상은 테두리 색상을 의미 -->

    <padding android:left="0.01dp" android:top="0.01dp" android:right="0.01dp" android:bottom="0.01dp" />
    <!--padding으로 크기를 줄여서 백그라운드에 그려진 이미지를 보이게 함. -->
    <!--패딩 크기를 더 주면 테두리가 더 두꺼워짐. 지정할 곳을 left, top, right, bottom으로 -->
</shape>